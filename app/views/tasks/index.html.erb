<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li class="border-start border-5 bg-warning bg-opacity-10"><%= link_to task.title, task_path(task), class: "text-decoration-none ms-3" %></li>
    <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  <% end %>
</ul>
<%= link_to 'Create a new task', new_task_path, class: "btn btn-primary" %>
